    # font pango:DejaVu Sans Mono, FontAwesome 9
    position top
    # tray_output primary
    colors {
      background #000000
      statusline #DCDCDC
    }
}
client.focused          #91BF3D #91BF3D #000000 #00DA8E
new_window normal 0 px

